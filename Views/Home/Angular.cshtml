<h2>@ViewBag.Message</h2>

<div ng-app="shakaBrahApp">
    <div ng-controller="shakaBrahAppCtrl">
        <shaka-view ng-model="items" ></shaka-view>
    </div>
</div>

@section scripts
{
    <script type="text/ng-template" id="shaka-view-template">
        <div>
            <table class="table table-striped table-bordered table-hover">
                <tr view-item ng-repeat="element in items" item="element"></tr>
            </table>
        </div>
    </script>
    <script type="text/ng-template" id="view-item-template">
        <tr>
	        <td>{{item.id}}</td>
	        <td>{{item.name}}</td>
	        <td>{{item.city}}</td>
	        <td>{{item.state}}</td>
	        <td>{{item.country}}</td>
	        <td>{{item.company}}</td>
	        <td>{{item.favoriteNumber}}</td>
        </tr>
    </script>

    <script>
        console.log('Script from section "scripts" loaded.');
    </script>
    
    <script src="@Url.Content("~/js/dist/ngApp.js")"></script>
}