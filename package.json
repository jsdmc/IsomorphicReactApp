{
  "name": "IsomorphicReactApp",
  "version": "1.0.0",
  "private": true,
  "description": "Isomorphic app template build on React.js",
  "browserify": {
    "transform": [
	  "browserify-shim",
      [
        "reactify",
        {
          "es6": true
        }
      ]
    ]
  },
  "browser":{
    "angular" : "./js/bower_components/angular/angular.js",
	"angular-resource" : "./js/bower_components/angular-resource/angular-resource.js"
  },
  "browserify-shim": {
    "angular-resource": {
        "depends": "angular",
        "exports": null
    },
    "angular": {
        "exports": "angular"
    }
  },
  "devDependencies": {
    "browserify": "~6.0.3",
    "browserify-shim": "^3.8.2",
    "combined-stream": "0.0.7",
    "gulp": "~3.8.10",
    "gulp-streamify": "0.0.5",
    "gulp-uglify": "^1.0.2",
    "reactify": "~0.16.0",
    "vinyl-source-stream": "~1.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jsdmc/IsomorphicReactApp.git"
  },
  "author": "Dmytro Chepurnyi",
  "dependencies": {
    "ampersand-collection": "^1.4.0",
    "ampersand-collection-rest-mixin": "^3.0.1",
    "react": "^0.12.2"
  }
}
